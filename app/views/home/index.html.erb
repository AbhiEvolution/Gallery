<%=render 'home/search'%>
<h1>All Published Albums</h1>
<div class="container-fluid">
  <div class="row">
    <% @user.each do |user| %>
      <% @albums.each do |album| %>
        <%if user.id == album.user_id %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <strong>Name:</strong>
                <%=user.name%>
              </div>
              <div class="card-body">
                <%= link_to  home_path(id: album.id),class:"link" do%>
                  <% if album.cover_photo.attached? %>
                    <%= image_tag(album.cover_photo,class: "card-top-img img-fluid") %>
                  <% end %>
                <%end%>
              </div>
              <div class="card-footer text-center"><%= album.title %></div>
              <div class="card-footer">
                <strong>Tags:</strong>
                <%=album.all_tags %>
              </div>
              <div class="card-footer">
                <strong>Total Photos:</strong>
                <%=album.photos.count%>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <%end%>
  </div>
</div>
