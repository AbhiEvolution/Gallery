<%=render 'home/search'%>
<h1>All Published Albums</h1>
<div class="container-fluid">
  <div class="row">
    <% @user.each do |user| %>
      <% @albums.each do |album| %>
        <%if user.id == album.user_id %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <strong>Name:</strong>
                <%=user.name%>
              </div>
              <div class="card-body">
                <%= link_to  home_path(id: album.id),class:"link" do%>
                  <% if album.cover_photo.attached? %>
                    <%= image_tag(album.cover_photo,class: "card-top-img img-fluid") %>
                  <% end %>
                <%end%>
              </div>
              <div class="card-footer text-center">
                <a data-bs-toggle="collapse" href="#album" role="button" aria-expanded="false" ><i class="fa fa-arrow-circle-down" style="font-size:23px"></i></a>
              </div>
              <section class="collapse multi-collapse" id="album">
                <div class="card-footer">
                  <span>
                    <strong>Title:</strong>
                    <%=album.title%>
                  </span>
                  <span class="pl">
                    <strong>Description:</strong>
                    <%=album.description%>
                  </span>
                </div>
                <div class="card-footer">
                  <span>
                    <strong>Tags:</strong>
                    <%=album.all_tags %>
                  </span>
                  <span class="pl">
                    <strong>Total Photos:</strong>
                    <%=album.photos.count%>
                  </span>
                </div>
                <div class="card-footer">
                  <span>
                    <%= album.likes.count %> <%= (album.likes.count) == 1 ? 'Like' : 'Likes'%>
                  </span>
                </div>
              </section>
            </div>
          </div>
        <% end %>
      <% end %>
    <%end%>
  </div>
</div>
